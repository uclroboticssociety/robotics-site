---
import { footerColumns, footerBottom } from "../data/footer";
---

<footer class="border-t border-slate-200 bg-white/50">
  <div class="mx-auto max-w-6xl px-4 py-12 md:py-16">
    <div class="flex items-center gap-2 mb-10">
      <img src="/logo.png" alt="UCL Robotics Society" class="h-8 w-auto" />
      <span class="text-slate-700 font-semibold">UCL Robotics Society</span>
    </div>
    <div class="grid grid-cols-2 gap-8 sm:grid-cols-4 md:gap-12">
      {footerColumns.map((col) => (
        <div>
          <h3 class="text-xs font-semibold uppercase tracking-wider text-slate-500 mb-4">
            {col.title}
          </h3>
          <ul class="space-y-3">
            {col.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-slate-600 hover:text-slate-900 transition"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    <div class="mt-12 pt-8 border-t border-slate-200 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <span class="text-sm text-slate-500">Â© {new Date().getFullYear()} {footerBottom.copy}</span>
      <div class="flex items-center gap-3">
        <a
          href="https://www.instagram.com/ucl.robotics?igsh=MWNneW8wZWh1ZzZkaA%3D%3D&utm_source=qr"
          aria-label="Instagram"
          class="h-10 w-10 rounded-full border border-slate-200 bg-white/80 flex items-center justify-center text-slate-600 hover:text-indigo-600 hover:border-indigo-300 hover:bg-indigo-50 transition"
        >
          <svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="1.6">
            <rect x="3" y="3" width="18" height="18" rx="5"></rect>
            <circle cx="12" cy="12" r="4"></circle>
            <circle cx="17.5" cy="6.5" r="1"></circle>
          </svg>
        </a>
        <a
          href="https://www.linkedin.com/company/robotics-society-ucl/?viewAsMember=true"
          aria-label="LinkedIn"
          class="h-10 w-10 rounded-full border border-slate-200 bg-white/80 flex items-center justify-center text-slate-600 hover:text-indigo-600 hover:border-indigo-300 hover:bg-indigo-50 transition"
        >
          <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor">
            <path d="M6.94 6.5A1.44 1.44 0 1 1 4.06 6.5a1.44 1.44 0 0 1 2.88 0ZM4.5 8.75H7.5V19H4.5V8.75Zm5.25 0h2.86v1.4h.04c.4-.76 1.38-1.56 2.84-1.56 3.04 0 3.6 2 3.6 4.6V19h-3v-4.55c0-1.09-.02-2.5-1.52-2.5-1.52 0-1.76 1.18-1.76 2.42V19h-3V8.75Z"/>
          </svg>
        </a>
        <a
          href="https://chat.whatsapp.com/EH3n4x6V9UbAE2nXjzz1IT"
          aria-label="WhatsApp"
          class="h-10 w-10 rounded-full border border-slate-200 bg-white/80 flex items-center justify-center text-slate-600 hover:text-indigo-600 hover:border-indigo-300 hover:bg-indigo-50 transition"
        >
          <svg viewBox="0 0 24 24" class="h-5 w-5" fill="currentColor">
            <path d="M12 3a9 9 0 0 0-7.72 13.64L3 21l4.5-1.2A9 9 0 1 0 12 3Zm0 16.2a7.2 7.2 0 0 1-3.66-1.01l-.26-.15-2.17.58.58-2.12-.17-.27A7.2 7.2 0 1 1 12 19.2Zm3.78-5.3c-.2-.1-1.17-.58-1.35-.65-.18-.06-.31-.1-.44.1-.13.2-.5.65-.61.78-.11.13-.23.15-.43.05-.2-.1-.84-.31-1.6-1-.59-.52-.99-1.16-1.11-1.36-.12-.2-.01-.31.09-.41.09-.09.2-.23.3-.34.1-.11.13-.19.2-.32.06-.13.03-.24-.02-.34-.05-.1-.44-1.06-.6-1.45-.16-.38-.32-.33-.44-.33h-.38c-.13 0-.34.05-.52.24-.18.2-.68.66-.68 1.6 0 .95.7 1.86.8 1.99.1.13 1.38 2.11 3.35 2.96.47.2.83.32 1.11.41.47.15.9.13 1.24.08.38-.06 1.17-.48 1.34-.94.17-.46.17-.86.12-.94-.05-.08-.18-.13-.38-.23Z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
