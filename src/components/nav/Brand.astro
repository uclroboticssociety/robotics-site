---
const { name = "UCL Robotics Society" } = Astro.props as { name?: string };
---
<a href="/" class="flex items-center gap-3 min-w-0">
  <img src="/logo.png" alt={name} class="h-8 w-8 object-contain" />
  <span class="hidden sm:inline text-lg md:text-xl font-bold tracking-tight truncate max-w-[200px] sm:max-w-none">{name}</span>
</a>
