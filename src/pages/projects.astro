---
import Base from "../layouts/Base.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import type { ImageMetadata } from "astro";
import EventsLayout from "../components/events/EventsLayout.astro";

type ProjectEntry = CollectionEntry<"projects">;
type ProjectStatus = ProjectEntry["data"]["status"];

const statusOrder: Record<ProjectStatus, number> = {
  active: 0,
  paused: 1,
  completed: 2,
};

const projects: ProjectEntry[] = await getCollection("projects");
const projectsWithContent = await Promise.all(
  projects.map(async (entry) => {
    try {
      const rendered = await entry.render();
      return { ...entry, Content: rendered.Content };
    } catch (error) {
      return { ...entry, Content: null };
    }
  })
);

const sorted = projectsWithContent
  .slice()
  .sort((a, b) => statusOrder[a.data.status] - statusOrder[b.data.status]);

const projectSidebar = [
  {
    id: "vla",
    emoji: "ğŸ¤–",
    title: "VLA",
    href: "/projects",
    description: "Vision-Language-Action research and build track.",
    tag: "vla",
  },
];

const recentByInitiative = {
  vla: sorted.map((entry) => ({
    title: entry.data.title,
    href: `/projects/${entry.slug.includes("/") ? entry.slug.split("/")[0] : entry.slug}`,
  })),
};

const imageMap = import.meta.glob<ImageMetadata>(
  "/src/content/projects/**/*.{png,jpg,jpeg,webp,gif,svg}",
  { eager: true, import: "default" }
);
const resolveProjectImage = (entry: ProjectEntry) => {
  const folder = entry.id.split("/").slice(-2, -1)[0];
  if (!folder) return "";
  const directKey = `/src/content/projects/${folder}/0.png`;
  const image = imageMap[directKey];
  return image?.src ?? "";
};
