---
import Base from "../layouts/Base.astro";

const filmImages = [
  { src: "/film/1.png", alt: "Robotics lab" },
  { src: "/film/2.png", alt: "Workshop session" },
  { src: "/film/3.png", alt: "Team project" },
  { src: "/film/4.png", alt: "Robotics demo" },
  { src: "/film/5.png", alt: "Society team" },
  { src: "/film/6.png", alt: "Event moment" },
];
const filmFrames = [...filmImages, ...filmImages];
---
<Base title="UCL Robotics Society â€” Home">
  <style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,300;0,9..144,600;0,9..144,800;1,9..144,500&display=swap");
  </style>
  <style>
    .hero-gradient {
      background: linear-gradient(
        -45deg,
        #eef2ff 0%,
        #e0f2fe 25%,
        #f0f9ff 50%,
        #e0e7ff 75%,
        #cffafe 100%
      );
      background-size: 400% 400%;
      animation: hero-gradient-shift 14s ease infinite;
    }
    @keyframes hero-gradient-shift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }
    .hero-title {
      font-family: "Fraunces", Georgia, serif;
      font-weight: 800;
      letter-spacing: -0.04em;
      line-height: 0.95;
    }
    .fade-in {
      opacity: 0;
      transform: translateY(24px);
      transition: opacity 0.8s ease, transform 0.8s ease;
    }
    .fade-in.is-visible {
      opacity: 1;
      transform: translateY(0);
    }
    .hero-photo {
      width: clamp(240px, 36vw, 520px);
      height: clamp(180px, 28vw, 390px);
      object-fit: cover;
      border-radius: 24px;
      box-shadow: 0 18px 40px rgba(15, 23, 42, 0.18);
    }
  </style>

  <section class="hero-gradient fade-in" data-delay="0ms">
    <div class="mx-auto max-w-6xl px-4 py-16 md:py-20">
      <div class="grid md:grid-cols-[1.05fr_1.2fr] gap-10 md:items-center">
        <div class="fade-in" data-delay="0ms">
          <h1 class="hero-title mt-4 text-4xl sm:text-5xl md:text-6xl lg:text-7xl text-slate-900">
            <span class="fade-in" data-delay="0ms">Welcome to the UCL Robotics Society.</span>
          </h1>
          <p class="mt-6 text-slate-600 text-lg max-w-lg">
            A student-led community for robotics, AI, and mechatronics. We prototype, compete,
            and share the thrill of real-world engineering.
          </p>
          <div class="mt-8 flex flex-wrap gap-3">
            <a href="/events" class="rounded-full px-6 py-3 bg-slate-900 text-white hover:bg-slate-800">
              See events
            </a>
            <a href="/projects" class="rounded-full px-6 py-3 border border-slate-300 hover:border-slate-400">
              Explore projects
            </a>
          </div>
        </div>
        <div class="ml-auto mr-0 flex w-fit items-center justify-end fade-in" data-delay="600ms">
          <img src="/film/1.png" alt="Robotics lab" class="hero-photo" loading="lazy" />
        </div>
      </div>
    </div>
  </section>
</Base>

<script>
  const fadeEls = Array.from(document.querySelectorAll('.fade-in'));
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      const el = entry.target;
      const delay = el.getAttribute('data-delay');
      if (delay) {
        const el = entry.target as HTMLElement;
      }
      if (entry.isIntersecting) {
        el.classList.add('is-visible');
      } else {
        el.classList.remove('is-visible');
      }
    });
  }, { threshold: 0.1, rootMargin: "0px 0px 20% 0px" });

  fadeEls.forEach((el) => observer.observe(el));
</script>
