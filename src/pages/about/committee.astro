const committeeGroups = [
  {
    title: "Leadership & Operations",
    roles: ["President", "Treasurer"],
    accent: "from-amber-400/20 via-orange-200/20 to-rose-200/20",
    chip: "bg-amber-500/10 text-amber-900 border-amber-200",
  },
  {
    title: "Teaching Team",
    roles: ["Teaching Officer"],
    accent: "from-emerald-400/20 via-teal-200/20 to-cyan-200/20",
    chip: "bg-emerald-500/10 text-emerald-900 border-emerald-200",
  },
  {
    title: "Technical & Web",
    roles: ["Technical Officer", "Web Officer","Industry Coordinator",],
    accent: "from-sky-400/20 via-indigo-200/20 to-blue-200/20",
    chip: "bg-sky-500/10 text-sky-900 border-sky-200",
  },
  {
    title: "Events & Media",
    roles: ["Head of Events", "Design & Social Media Officer","Head of Marketing"],
    accent: "from-fuchsia-400/20 via-pink-200/20 to-rose-200/20",
    chip: "bg-fuchsia-500/10 text-fuchsia-900 border-fuchsia-200",
  },
];
---

<Base title="Committee â€” UCL Robotics Society">
  <section class="mx-auto max-w-6xl px-4 py-12 text-center">
    <h1 class="text-3xl font-semibold tracking-tight">Committee</h1>
    <p class="text-slate-600 mt-2">Meet the team leading UCL Robotics Society.</p>

    <!-- Committee Introduction -->
    <div class="mt-8">
      <article class="rounded-2xl shadow-lg p-8 bg-white/70 border border-slate-200 text-center">
        <h2 class="text-2xl font-semibold mb-4">Our Team</h2>
        <p class="text-slate-700 leading-relaxed">
          Our committee is composed of dedicated students who volunteer their time to organize 
          events, manage projects, and build our community. Each member brings unique skills and 
          perspectives to help the society grow and thrive.
        </p>
      </article>
    </div>

    <!-- Committee Members -->
    <div class="mt-12">
      <h2 class="text-2xl font-semibold mb-6">Committee Members</h2>
      {committeeGroups.map((group) => (
        <section class="mt-10 rounded-3xl border border-slate-200 bg-gradient-to-br p-6" class:list={[group.accent]}>
          <div class="flex justify-center mb-6">
            <h3
              class="text-3xl md:text-4xl font-semibold tracking-tight px-4 py-2 rounded-full border shadow-sm"
              class:list={[group.chip]}
            >
              {group.title}
            </h3>
          </div>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {committee
              .filter((member) => group.roles.includes(member.role.trim()))
              .map((member) => (
                <article class="rounded-2xl shadow p-6 bg-white/70 border border-slate-200 hover:shadow-xl transition text-center">
                  <img
                    src={member.photo}
                    alt={`${member.role} photo`}
                    class="aspect-square w-40 h-40 mx-auto rounded-xl object-cover mb-4 bg-slate-100"
                  />
                  <h4 class="font-semibold text-lg">{member.role}</h4>
                  <p class="text-indigo-600 font-medium mt-1">{member.name}</p>
                  <p class="text-slate-600 text-sm mt-2">{member.bio}</p>
                </article>
              ))}
          </div>
        </section>
      ))}
    </div>

    <!-- Join Committee -->
    <div class="mt-12">
      <article class="rounded-2xl shadow-lg p-8 bg-gradient-to-br from-indigo-50 to-cyan-50 border border-indigo-200 text-center">
        <h2 class="text-2xl font-semibold mb-4">Interested in Joining the Committee?</h2>
        <p class="text-slate-700 mb-6">
          We're always looking for passionate members to join our committee. Whether you're 
          interested in organizing events, managing projects, or building partnerships, 
          there's a role for you.
        </p>
        <div class="flex gap-3 justify-center">
          <a href="/join" class="rounded-xl px-5 py-3 bg-indigo-600 text-white hover:bg-indigo-700">
            Get Involved
          </a>
          <a href="/contact" class="rounded-xl px-5 py-3 border border-indigo-300 hover:border-indigo-400">
            Contact Us
          </a>
        </div>
      </article>
    </div>
  </section>
</Base>
