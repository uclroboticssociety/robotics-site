---

<Base title="Committee â€” UCL Robotics Society">
  <style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,300;0,9..144,500;0,9..144,700;1,9..144,400&display=swap");
  </style>
  <style>
    .hero-gradient {
      background: linear-gradient(
        -45deg,
        #eef2ff 0%,
        #e0f2fe 25%,
        #f0f9ff 50%,
        #e0e7ff 75%,
        #cffafe 100%
      );
      background-size: 400% 400%;
      animation: hero-gradient-shift 14s ease infinite;
    }
    @keyframes hero-gradient-shift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }
    .hero-name {
      font-family: "Fraunces", Georgia, serif;
      font-weight: 700;
      letter-spacing: -0.04em;
      line-height: 0.92;
    }
  </style>

  <section class="relative hero-gradient min-h-[60vh] md:min-h-[70vh] flex items-center">
    <div class="relative z-10 mx-auto w-full max-w-6xl px-4 py-16 text-center">
      <h1 class="hero-name text-5xl sm:text-6xl md:text-7xl lg:text-8xl xl:text-9xl text-slate-900">
        Committee
      </h1>
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-4 py-12">
    <!-- Committee Members -->
    <div class="mt-12">
      <h2 class="text-2xl font-semibold mb-6 text-center">Committee Members</h2>
      {committeeGroups.map((group) => (
        <section class="mt-10 rounded-3xl border border-slate-200 bg-gradient-to-br p-6" class:list={[group.accent]}>
          <div class="flex justify-center mb-6">
            <h3
              class="text-3xl md:text-4xl font-semibold tracking-tight px-4 py-2 rounded-full border shadow-sm"
              class:list={[group.chip]}
            >
              {group.title}
            </h3>
          </div>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {committee
              .filter((member) => group.roles.includes(member.role.trim()))
              .map((member) => (
                <article class="rounded-2xl shadow p-6 bg-white/70 border border-slate-200 hover:shadow-xl transition text-center">
                  <img
                    src={member.photo}
                    alt={`${member.role} photo`}
                    class="aspect-square w-40 h-40 mx-auto rounded-xl object-cover mb-4 bg-slate-100"
                  />
                  <h4 class="font-semibold text-lg">{member.role}</h4>
                  <p class="text-indigo-600 font-medium mt-1">{member.name}</p>
                  <p class="text-slate-600 text-sm mt-2">{member.bio}</p>
                </article>
              ))}
          </div>
        </section>
      ))}
    </div>

  </section>
</Base>
