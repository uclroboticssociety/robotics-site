    .prof-2 { background: linear-gradient(to bottom, #e0f2fe 0%, #fef9c3 100%); }
    .prof-3 { background: linear-gradient(to bottom, #fef9c3 0%, #ffe4e6 100%); }
    .prof-4 { background: linear-gradient(to bottom, #ffe4e6 0%, #eef2ff 100%); }
