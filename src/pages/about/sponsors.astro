---
import Base from "../../layouts/Base.astro";

const sponsors = [
  {
    name: "TBD Sponsor",
    tier: "Platinum",
    logo: "[ logo ]",
    description: "Supporting our major events and initiatives.",
  },
  {
    name: "TBD Sponsor",
    tier: "Gold",
    logo: "[ logo ]",
    description: "Contributing to workshops and projects.",
  },
  {
    name: "TBD Sponsor",
    tier: "Silver",
    logo: "[ logo ]",
    description: "Supporting our community activities.",
  },
];

const benefits = [
  {
    title: "Brand Visibility",
    description: "Your logo on our website, events, and promotional materials.",
  },
  {
    title: "Talent Recruitment",
    description: "Direct access to talented students interested in robotics and AI.",
  },
  {
    title: "Event Sponsorship",
    description: "Opportunity to sponsor workshops, hackathons, and competitions.",
  },
  {
    title: "Networking",
    description: "Connect with students, faculty, and industry professionals.",
  },
];
---

<Base title="Sponsors — UCL Robotics Society">
  <section class="mx-auto max-w-6xl px-4 py-12">
    <h1 class="text-3xl font-semibold tracking-tight">Sponsors</h1>
    <p class="text-slate-600 mt-2">Our valued partners supporting robotics innovation at UCL.</p>

    <!-- Sponsors Introduction -->
    <div class="mt-8">
      <article class="rounded-2xl shadow-lg p-8 bg-white/70 border border-slate-200">
        <h2 class="text-2xl font-semibold mb-4">Our Sponsors</h2>
        <p class="text-slate-700 leading-relaxed">
          We are grateful to our sponsors who make our events, projects, and initiatives possible. 
          Their support enables us to provide workshops, hackathons, and resources to our members, 
          fostering innovation and learning in robotics and AI.
        </p>
      </article>
    </div>

    <!-- Current Sponsors -->
    <div class="mt-12">
      <h2 class="text-2xl font-semibold mb-6">Current Sponsors</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {sponsors.map((sponsor) => (
          <article class="rounded-2xl shadow p-6 bg-white/70 border border-slate-200 hover:shadow-xl transition">
            <div class="aspect-video rounded-xl bg-slate-100 flex items-center justify-center mb-4">
              <span class="text-slate-400 text-sm">{sponsor.logo}</span>
            </div>
            <div class="mb-2">
              <span class={`inline-block px-2 py-1 rounded text-xs font-medium ${
                sponsor.tier === "Platinum" ? "bg-purple-100 text-purple-700" :
                sponsor.tier === "Gold" ? "bg-yellow-100 text-yellow-700" :
                "bg-slate-100 text-slate-700"
              }`}>
                {sponsor.tier}
              </span>
            </div>
            <h3 class="font-semibold text-lg mb-2">{sponsor.name}</h3>
            <p class="text-slate-600 text-sm">{sponsor.description}</p>
          </article>
        ))}
      </div>
    </div>

    <!-- Sponsorship Tiers -->
    <div class="mt-12">
      <h2 class="text-2xl font-semibold mb-6">Sponsorship Tiers</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <article class="rounded-2xl shadow p-6 bg-white/70 border border-slate-200">
          <div class="mb-3">
            <span class="inline-block px-3 py-1 rounded text-sm font-medium bg-purple-100 text-purple-700">
              Platinum
            </span>
          </div>
          <h3 class="font-semibold text-lg mb-3">Platinum Sponsor</h3>
          <ul class="text-slate-700 text-sm space-y-2">
            <li>• Premium logo placement</li>
            <li>• Speaking opportunities at events</li>
            <li>• Exclusive recruitment access</li>
            <li>• Custom sponsorship packages</li>
          </ul>
        </article>

        <article class="rounded-2xl shadow p-6 bg-white/70 border border-slate-200">
          <div class="mb-3">
            <span class="inline-block px-3 py-1 rounded text-sm font-medium bg-yellow-100 text-yellow-700">
              Gold
            </span>
          </div>
          <h3 class="font-semibold text-lg mb-3">Gold Sponsor</h3>
          <ul class="text-slate-700 text-sm space-y-2">
            <li>• Logo on website and materials</li>
            <li>• Event sponsorship opportunities</li>
            <li>• Networking events access</li>
            <li>• Project collaboration</li>
          </ul>
        </article>

        <article class="rounded-2xl shadow p-6 bg-white/70 border border-slate-200">
          <div class="mb-3">
            <span class="inline-block px-3 py-1 rounded text-sm font-medium bg-slate-100 text-slate-700">
              Silver
            </span>
          </div>
          <h3 class="font-semibold text-lg mb-3">Silver Sponsor</h3>
          <ul class="text-slate-700 text-sm space-y-2">
            <li>• Logo on website</li>
            <li>• Social media recognition</li>
            <li>• Newsletter mentions</li>
            <li>• Community engagement</li>
          </ul>
        </article>
      </div>
    </div>

    <!-- Benefits -->
    <div class="mt-12">
      <h2 class="text-2xl font-semibold mb-6">Why Sponsor Us?</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {benefits.map((benefit) => (
          <article class="rounded-xl border border-slate-200 bg-white/70 p-6">
            <h3 class="font-semibold mb-2">{benefit.title}</h3>
            <p class="text-slate-700">{benefit.description}</p>
          </article>
        ))}
      </div>
    </div>

    <!-- Become a Sponsor -->
    <div class="mt-12">
      <article class="rounded-2xl shadow-lg p-8 bg-gradient-to-br from-indigo-50 to-cyan-50 border border-indigo-200">
        <h2 class="text-2xl font-semibold mb-4">Become a Sponsor</h2>
        <p class="text-slate-700 mb-6">
          Interested in supporting UCL Robotics Society? We offer flexible sponsorship packages 
          tailored to your organization's goals. Partner with us to support the next generation 
          of roboticists and gain access to talented students.
        </p>
        <div class="flex gap-3">
          <a href="/contact" class="rounded-xl px-5 py-3 bg-indigo-600 text-white hover:bg-indigo-700">
            Contact Us
          </a>
          <a href="/about/mission" class="rounded-xl px-5 py-3 border border-indigo-300 hover:border-indigo-400">
            Learn More
          </a>
        </div>
      </article>
    </div>
  </section>
</Base>
