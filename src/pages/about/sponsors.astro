---
import Base from "../../layouts/Base.astro";

const goldSponsors = [
  { name: " ", logo: "/sponsors/1.png" },
  { name: " ", logo: "/sponsors/2.png" },
];
---

<Base title="Sponsors â€” UCL Robotics Society">
  <style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,300;0,9..144,500;0,9..144,700;1,9..144,400&display=swap");
  </style>
  <style>
    .hero-gradient {
      background: linear-gradient(
        -45deg,
        #eef2ff 0%,
        #e0f2fe 25%,
        #f0f9ff 50%,
        #e0e7ff 75%,
        #cffafe 100%
      );
      background-size: 400% 400%;
      animation: hero-gradient-shift 14s ease infinite;
    }
    @keyframes hero-gradient-shift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }
    .hero-name {
      font-family: "Fraunces", Georgia, serif;
      font-weight: 700;
      letter-spacing: -0.04em;
      line-height: 0.92;
    }

    .fade-in {
      opacity: 0;
      transform: translateY(24px);
      transition: opacity 0.8s ease, transform 0.8s ease;
    }
    .fade-in.is-visible {
      opacity: 1;
      transform: translateY(0);
    }
  </style>

  <section class="relative hero-gradient min-h-[60vh] md:min-h-[70vh] flex items-center fade-in">
    <div class="relative z-10 mx-auto w-full max-w-6xl px-4 py-16 text-center">
      <h1 class="hero-name text-5xl sm:text-6xl md:text-7xl lg:text-8xl xl:text-9xl text-slate-900">
        Sponsors
      </h1>
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-4 py-12 fade-in">
    <div class="text-center fade-in">
      <p class="text-3xl md:text-4xl font-bold tracking-wide text-purple-600 fade-in">OUR SPONSORS</p>
    </div>

    <div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {goldSponsors.map((sponsor, index) => (
        <div class="rounded-2xl border border-slate-200 bg-white p-3 flex items-center justify-center h-40 fade-in" data-delay={`${index * 120}ms`}>
          <img
            src={sponsor.logo}
            alt={sponsor.name}
            class="w-full h-full rounded-full object-contain bg-white"
          />
        </div>
      ))}
    </div>
  </section>
</Base>

<script>
  const fadeEls = Array.from(document.querySelectorAll('.fade-in'));
  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      const el = entry.target as HTMLElement;
      const delay = el.getAttribute('data-delay');
      if (delay) {
        el.style.transitionDelay = delay;
      }
      if (entry.isIntersecting) {
        el.classList.add('is-visible');
      } else {
        el.classList.remove('is-visible');
      }
    });
  }, { threshold: 0.15 });

  fadeEls.forEach((el) => observer.observe(el));
</script>
