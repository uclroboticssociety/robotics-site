---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
const { title = "Robotics Society", description = "Build. Learn. Compete." } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/logo.png" />
  </head>
  <body class="bg-gradient-to-br from-indigo-50 via-white to-cyan-50 text-slate-900">
    <Navbar />
    <main><slot /></main>
    <Footer />
  </body>
</html>

